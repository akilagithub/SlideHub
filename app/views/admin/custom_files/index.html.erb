<h3><%= t(:custom_files) %>&nbsp;&nbsp;<small><%= link_to t(:new_custom_file), new_admin_custom_file_path %></small></h3>

<div class="panel panel-default">

  <!-- Table -->
  <table class="table table-striped table-bordered small">
    <thead>
      <tr>
        <th class="col-md-2"><%= t(:path) %></th>
        <th class="col-md-7">URL</th>
        <th class="col-md-2"><%= t(:description) %></th>
        <th class="col-md-1"><%= t(:operation) %></th>
      </tr>
    </thead>
    <tbody>
      <% @custom_files.each do |custom_file| %>
        <tr>
          <td><%= custom_file.path %></td>
          <td><%= "#{CloudConfig::SERVICE.resource_endpoint}/custom-files/#{custom_file.path}" %></td>
          <td><%= custom_file.description %></td>
          <td>
            <%= button_to t(:delete), admin_custom_file_path(custom_file.id), method: :delete, class: 'btn btn-primary', form_class: 'form-inline' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
