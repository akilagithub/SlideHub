<h3><%= t(:site_settings) %></h3>

<%= form_tag '/admin/site_settings/update', method: :post, class: 'form-horizontal slide' do %>
<div class="panel panel-default">

    <!-- Table -->
    <table class="table table-striped table-bordered small">
        <thead>
            <tr>
                <th class="col-md-4"><%= t(:key) %></th>
                <th class="col-md-8"><%= t(:value) %></th>
            </tr>
        </thead>
        <tbody>
            <% index = 0 %>
            <% @settings.each do |s| %>
              <%= fields_for('settings[]', s, index: nil) do |fh| %>
            <tr>
              <td><%= s.var %><%= fh.hidden_field :var %></td>
                <td><%= fh.text_area :value, :class => 'form-control', :size => "30x5" %></td>
            </tr>
            <% index += 1 %>
          <% end %>
            <% end %>
        </tbody>
    </table>
</div>

    <%= submit_tag t(:save_settings), class: 'btn btn-primary btn-lg' %>
<% end %>


