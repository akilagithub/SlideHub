<h3><%= t(:edit_user) %>&nbsp;&nbsp;<small><%= link_to t(:back_to_dashboard), admin_dashboard_path %></small></h3>

<%= form_for @user, :html => { :class => "form-horizontal user" }, :url => admin_user_path(@user.id) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field "_id", :value => @user[:id], :disabled => "disabled", :class => 'form-control' %>
    </div>
    <%= f.error_span(:user_id) %>
  </div>

  <div class="control-group">
    <%= f.label :username, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, :class => 'form-control' %>
    </div>
    <%= f.error_span(:username) %>
  </div>

  <div class="control-group">
    <%= f.label :display_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :display_name, :class => 'form-control' %>
    </div>
    <%= f.error_span(:display_name) %>
  </div>

  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%= f.error_span(:email) %>
  </div>

  <div class="control-group">
    <%= f.label :biography, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :biography, :class => 'form-control' %>
    </div>
    <%= f.error_span(:biography) %>
  </div>

  <div class="control-group">
    <%= f.label :admin, :class => 'control-label' %>
    <div class="controls checkbox">
      <label>
        <%= f.check_box :admin %><%= t('activerecord.attributes.user.admin') %>
      </label>
    </div>
    <%= f.error_span(:admin) %>
  </div>

  <br clear="all" />

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t("helpers.links.cancel"), admin_users_path, :class => 'btn btn-default' %>
  <%= link_to t(:delete_user), admin_user_path(@user[:id]), :method => 'delete', :class => 'btn btn-danger pull-right', data: {:confirm => t(:confirm_to_delete_user)} %>

<% end %>


